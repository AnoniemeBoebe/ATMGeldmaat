<Window x:Class="ATMApp.GeldStortenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geld Storten" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
	<Grid Background="#E8EAF6">
		<!-- Lichte achtergrondkleur -->
		<!-- Titel Label -->
		<Label Content="Geld Storten" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="18" Foreground="#3F51B5"/>

		<!-- Bedrag invoeren -->
		<Label Content="Bedrag:" HorizontalAlignment="Left" Margin="65,68,0,0" FontSize="18" VerticalAlignment="Top" Foreground="#3F51B5"/>
		<TextBox Name="txtBedrag" HorizontalAlignment="Left" Margin="150,70,0,0" FontSize="18" VerticalAlignment="Top" Width="150" Background="White" Foreground="Black" BorderBrush="#3F51B5" BorderThickness="2" Height="30"/>

		<!-- Knop om geld te storten -->
		<Button Content="Storten" HorizontalAlignment="Left" Margin="150,120,0,0" VerticalAlignment="Top" Width="150" Background="#3F51B5" Foreground="White" Click="Storten_Click" Height="30"/>
	</Grid>
</Window>
