<Window x:Class="ATMApp.GeldOpnemenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geld Opnemen" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Grid Background="#E8EAF6">
        <!-- Lichte achtergrondkleur -->
        <!-- Titel Label -->
        <Label Content="Geld Opnemen" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="18" Foreground="#3F51B5"/>

        <!-- Bedrag invoeren -->
        <Label Content="Bedrag:" HorizontalAlignment="Left" Margin="65,65,0,0" FontSize="18" VerticalAlignment="Top" Foreground="#3F51B5" Height="40" Width="65"/>
        <TextBox Name="txtBedrag" HorizontalAlignment="Left" Margin="150,70,0,0" FontSize="18" VerticalAlignment="Top" Width="150" Background="White" Foreground="Black" BorderBrush="#3F51B5" BorderThickness="2" Height="30"/>

        <!-- Knop om geld op te nemen -->
        <Button Content="Opnemen" HorizontalAlignment="Left" Margin="150,110,0,0" VerticalAlignment="Top" Width="150" Background="#3F51B5" Foreground="White" Click="Opnemen_Click" Height="40"/>
    </Grid>
</Window>
