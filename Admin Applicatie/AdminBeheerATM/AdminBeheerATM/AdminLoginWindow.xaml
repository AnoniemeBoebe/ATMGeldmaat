<Window x:Class="ATMApp.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None">
	<Grid Background="#E8EAF6">
		<!-- Lichte blauwe achtergrond -->
		<StackPanel Margin="20">
			<Border BorderBrush="#3F51B5" BorderThickness="2" Padding="20" CornerRadius="5" Background="White">
				<StackPanel>
					<TextBlock Text="Admin Login" FontWeight="Bold" FontSize="18" Margin="0,0,0,20" Foreground="#3F51B5"/>

					<TextBlock Text="Gebruikersnaam" Margin="0,0,0,5" Foreground="#3F51B5"/>
					<TextBox Name="txtUsername" Height="30" Margin="0,0,0,15" Background="White" Foreground="Black" BorderBrush="#3F51B5" BorderThickness="2"/>

					<TextBlock Text="Wachtwoord" Margin="0,0,0,5" Foreground="#3F51B5"/>
					<PasswordBox Name="txtPassword" Height="30" Margin="0,0,0,15" Background="White" Foreground="Black" BorderBrush="#3F51B5" BorderThickness="2"/>

					<Button Content="Login" Background="#3F51B5" Foreground="White" Height="35" BorderThickness="0" Click="Login_Click"/>
				</StackPanel>
			</Border>
		</StackPanel>
	</Grid>
</Window>
